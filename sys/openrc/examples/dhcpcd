#!/sbin/openrc-run

description="DHCP Client Daemon"

command="/sbin/dhcpcd"
# command_args="-q -B ${command_args:-}"
command_args="-q"
command_background="true"
pidfile="/var/run/dhcpcd/pid"

depend() {
	provide net
	need localmount
	use logger network
	after bootmisc modules
	before dns
}

start() {
	${command} ${command_args} wlan0
}

stop() {
	${command} --release wlan0
}
